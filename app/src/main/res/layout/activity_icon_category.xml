<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.IconCategoryActivity">

    <TextView
        android:id="@+id/tv_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Select the category icon"
        android:textSize="28sp"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/rg_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/tv_icon"
        android:gravity="center">

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <RadioButton
                android:id="@+id/rbFuel"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="16dp"
                android:drawableTop="@drawable/ic_gas_station"
                android:background="@drawable/selector_icon_background"
                android:button="@null" />

            <RadioButton
                android:id="@+id/rbWifi"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="16dp"
                android:drawableTop="@drawable/ic_wifi"
                android:background="@drawable/selector_icon_background"
                android:button="@null" />

            <RadioButton
                android:id="@+id/rbElectricity"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="16dp"
                android:drawableTop="@drawable/ic_electricity"
                android:background="@drawable/selector_icon_background"
                android:button="@null" />
        </RadioGroup>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <RadioButton
                android:id="@+id/rbCar"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="16dp"
                android:drawableTop="@drawable/ic_car"
                android:background="@drawable/selector_icon_background"
                android:button="@null" />

            <RadioButton
                android:id="@+id/rbCreditCard"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="16dp"
                android:drawableTop="@drawable/ic_credit_card"
                android:background="@drawable/selector_icon_background"
                android:button="@null" />

            <RadioButton
                android:id="@+id/rbKey"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="16dp"
                android:drawableTop="@drawable/ic_key"
                android:background="@drawable/selector_icon_background"
                android:button="@null" />
        </RadioGroup>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <RadioButton
                android:id="@+id/rbShoppingCart"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="16dp"
                android:drawableTop="@drawable/ic_shopping_cart"
                android:background="@drawable/selector_icon_background"
                android:button="@null" />

            <RadioButton
                android:id="@+id/rbWaterDrop"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="16dp"
                android:drawableTop="@drawable/ic_water_drop"
                android:background="@drawable/selector_icon_background"
                android:button="@null" />

            <RadioButton
                android:id="@+id/rbHome"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="16dp"
                android:drawableTop="@drawable/ic_home"
                android:background="@drawable/selector_icon_background"
                android:button="@null" />
        </RadioGroup>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <RadioButton
                android:id="@+id/rbGameControl"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="16dp"
                android:drawableTop="@drawable/ic_game_control"
                android:background="@drawable/selector_icon_background"
                android:button="@null" />

            <RadioButton
                android:id="@+id/rbClothes"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="16dp"
                android:drawableTop="@drawable/ic_clothes"
                android:background="@drawable/selector_icon_background"
                android:button="@null" />

            <RadioButton
                android:id="@+id/rbGraphic"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="16dp"
                android:drawableTop="@drawable/ic_graphic"
                android:background="@drawable/selector_icon_background"
                android:button="@null" />
        </RadioGroup>
    </RadioGroup>

    <Button
        android:id="@+id/btnIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Save Icon"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
